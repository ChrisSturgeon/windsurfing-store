extends layout 

block content 

  div(class="flex flex-col p-2 md:items-center")
    div(class="flex md:flex-col justify-between items-center")
      h1(class="font-bold text-4xl")= title
      p(class='font-bold') Â£#{sku.price}

    div(class=" flex flex-col md:flex-row md:gap-2 text-blue-400")
      a(href=sku.url + "/update") Update
      a(href=sku.url + "/delete") Delete
    if sku.image 
      img(class="w-full md:h-auto md:w-60 " src="/uploads/" + sku.image )

    h2(class="font-bold") Stock:

    ul 
      for instance in sku_instances
        li
          a(href=instance.url) #{instance.size_formatted} in '#{instance.quality}' condition
      
      else 
        li Currently Out of Stock